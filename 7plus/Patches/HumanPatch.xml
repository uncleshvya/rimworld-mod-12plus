<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName = "Human"]/statBases/LeatherAmount</xpath>
		<value>
			<LeatherAmount>0</LeatherAmount>
			<MeatAmount>0</MeatAmount>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Human"]/race</xpath>
		<value>
			<willNeverEat>
				<li>Corpse_Human</li>
				<li>Meat_Human</li>
			</willNeverEat>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Human"]/alienRace/generalSettings</xpath>
		<value>
			<disallowedTraits>
				<li> <defName>Cannibal</defName> </li>
				<li> <defName>Gay</defName> </li>
				<li> <defName>Masochist</defName> </li>
				<li> <defName>Pyromaniac</defName> </li>
				<li> <defName>Asexual</defName> </li>
				<li> <defName>Bisexual</defName> </li>
			</disallowedTraits>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Human"]/alienRace/thoughtSettings/cannotReceiveThoughts</xpath>
		<value>
			<li>ButcheredHumanlikeCorpse</li>
			<li>KnowButcheredHumanlikeCorpse</li>
			<li>KilledHumanlikeBloodlust</li>
			<li>WitnessedDeathBloodlust</li>
		</value>
	</Operation>

</Patch>