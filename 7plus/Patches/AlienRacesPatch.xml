<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation MayRequire="erdelf.HumanoidAlienRaces" Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingCategoryDef[defName = "alienCorpseCategory"]/parent</xpath>
				<value>
					<parent>Corpses</parent>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/SpecialThingFilterDef[defName = "AllowCorpsesColonist"]/parentCategory</xpath>
				<value>
					<parentCategory>alienCorpseCategory</parentCategory>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/SpecialThingFilterDef[defName = "AllowCorpsesStranger"]/parentCategory</xpath>
				<value>
					<parentCategory>alienCorpseCategory</parentCategory>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>
