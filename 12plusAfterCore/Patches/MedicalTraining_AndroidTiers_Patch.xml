<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation MayRequire="itchyflea.medicaltraining" Class="PatchOperationSequence">
		<success>Always</success>
		<operations>

			<!-- Исправление согласно концепции «12+».

			Отключена разделка гниющих трупов -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/RecipeDef[defName = "IF_MedTable"]/fixedIngredientFilter</xpath>
				<value>
					<specialFiltersToDisallow>
						<li>AllowRotten</li>
					</specialFiltersToDisallow>
				</value>
			</li>
			<!-- Адаптация к моду Android Tiers -->
			<li MayRequire="Atlas.AndroidTiers" Class="PatchOperationAdd">
				<xpath>Defs/RecipeDef[defName = "IF_MedTable"]/fixedIngredientFilter</xpath>
				<value>
					<disallowedThingDefs>
						<li>Corpse_Android1Tier</li>
						<li>Corpse_Android2Tier</li>
						<li>Corpse_Android3Tier</li>
						<li>Corpse_Android4Tier</li>
						<li>Corpse_Android5Tier</li>
						<li>Corpse_M7Mech</li>
						<li>Corpse_M8Mech</li>
					</disallowedThingDefs>
				</value>
			</li>

		</operations>
	</Operation>
</Patch>
